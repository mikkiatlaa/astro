---
const { text } = Astro.props;
---

<a href="#">{text}</a>

<style>
    a {
        background-color: #f1a3c3;
        border: none;
        border-radius: 24px;
        color: #ffffff;
        cursor: pointer;
        padding: 12px 48px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #7fb3ff;
    }
</style>
