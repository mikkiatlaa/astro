---
const { title, text } = Astro.props;
---

<section class="intro">
    <h1>{title}</h1>
    <p>{text}</p>
</section>

<style>
    .intro {
        display: flex;
        flex-direction: column;
        padding: 40px 20px;
        margin-top: 2vh;
        margin-bottom: 10vh;
        margin-left: 12%;
    }

    .intro h1 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .intro p {
        font-size: 1.2em;
        max-width: 600px;
    }
</style>
